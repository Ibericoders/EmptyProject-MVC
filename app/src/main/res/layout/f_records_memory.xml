<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addr_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fmeeting_firststeplayout"
        android:layout_alignParentTop="true"
        android:gravity="top|start"
        android:inputType="text|textMultiLine"
        android:minLines="10"
        android:padding="@dimen/margin_padding_size_xxxsmall"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:hint="Resumen de la reunion..." />

    <LinearLayout
        android:id="@+id/fmeeting_firststeplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_padding_size_xxsmall"
        android:orientation="vertical"
        android:divider="@color/colorPrimary"
        android:showDividers="middle|end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Próxima Reunión"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="Día:" />

            <EditText
                android:id="@+id/addr_nextDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>