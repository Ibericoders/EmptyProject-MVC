<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addr_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_xxxsmall"
        android:gravity="top|start"
        android:layout_alignParentTop="true"
        android:layout_above="@id/fmeeting_firststeplayout"
        android:inputType="text|textMultiLine"
        android:minLines="10"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:text="fndvkhsbedfcnskzd xc bzlcnakzbxicdlmxbckbzxhfcpjxlcjbzkxkbzxkckzxkjcbzkxkbzxkdbckzß∑dcmbzvjxhdvcagzsdxlnakzsvxdcjzxlcqOAS<BZXKBAJXVCJBZDKBSLZJDOAUWESODJ<LJZBXKJ<BZKH<SZDNKA<HGSKZDHXLJ<BZJGAK<ZDLB<KBIAS"/>

    <LinearLayout
        android:id="@+id/fmeeting_firststeplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_padding_size_xxsmall"
        android:orientation="vertical"
        android:divider="@color/colorPrimary"
        android:showDividers="middle|end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Próxima Reunión"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_size_xxsmall"
            android:paddingBottom="@dimen/margin_padding_size_xxsmall"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="Día:" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Hora:"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_size_medium"
            android:paddingBottom="@dimen/margin_padding_size_xxsmall"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_exportar"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>