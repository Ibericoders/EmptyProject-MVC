<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/g_toolbar"
        android:id="@+id/toolbar_tb"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="2">

        <FrameLayout
            android:id="@+id/frame_dices"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dados"
                android:textSize="18sp"
                android:textAllCaps="true"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_votes"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/colorDivider">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Votos"
                android:textSize="18sp"
                android:textAllCaps="true"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_record"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/colorButtonD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Actas"
                android:textSize="18sp"
                android:textAllCaps="true"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_expenses"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:background="@color/colorButtonC">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gastos"
                android:textSize="18sp"
                android:textAllCaps="true"/>
        </FrameLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>