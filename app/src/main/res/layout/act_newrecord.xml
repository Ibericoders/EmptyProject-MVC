<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/g_toolbar"
        android:id="@id/toolbar_tb"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/newrecord_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_tb"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <android.support.design.widget.TabItem
            android:id="@+id/newrecord_meeting_ti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newrecord_tab_meeting" />

        <android.support.design.widget.TabItem
            android:id="@+id/newrecord_attendees_ti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newrecord_tab_attendees" />

        <android.support.design.widget.TabItem
            android:id="@+id/newrecord_record_ti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newrecord_tab_record" />
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/newrecord_fragmentplaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newrecord_tablayout">

    </FrameLayout>


</RelativeLayout>